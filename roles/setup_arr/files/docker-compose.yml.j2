version: "3"
networks:
  arr_network:
    ipam:
      driver: default
      config:
        - subnet: 172.19.10.0/24
services:
  jellyfin:
    container_name: jellyfin
    image: ghcr.io/hotio/jellyfin
    restart: unless-stopped
    ports:
      - "8096:8096"
    environment:
      - PUID={{ arr_user_uid }}
      - PGID=100
      - TZ=Europe/Paris
    volumes:
      - {{ grosse_usb_path }}/config/jellyfin:/config
      - {{ gros_disque_path }}/data:/data
    networks:
      arr_network:
        ipv4_address: 172.19.10.5
  qbittorrent:
    container_name: qbittorrent
    image: ghcr.io/hotio/qbittorrent
    restart: unless-stopped
    ports:
      - "8080:8080"
    environment:
      - PUID={{ arr_user_uid }}
      - PGID=100
      - TZ=Europe/Paris
    volumes:
      - {{ grosse_usb_path }}/config/qbittorrent:/config
      - {{ gros_disque_path }}/data:/data
    networks:
      arr_network:
        ipv4_address: 172.19.10.6
  jellyseerr:
    container_name: jellyseerr
    image: ghcr.io/hotio/jellyseerr
    restart: unless-stopped
    ports:
      - "5055:5055"
    environment:
      - PUID={{ arr_user_uid }}
      - PGID=100
      - TZ=Europe/Paris
    volumes:
      - {{ grosse_usb_path }}/config/jellyseerr:/config
    networks:
      arr_network:
        ipv4_address: 172.19.10.7